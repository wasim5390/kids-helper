<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextView">
        <attr name="font_path_from_assets" format="reference|string"/>
        <attr name="customFont" format="string"/>
        <attr name="text" format="string"/>
    </declare-styleable>



    <declare-styleable name="RoundedImageWithText">
        <attr name="roundImageLabel" format="string"/>
        <attr name="roundImageSrc" format="reference"/>
        <attr name="roundImageLayout"  format="reference" />
        <attr name="roundImageBgColor" format="color"/>
        <attr name="roundBorderColor" format="color"/>
        <attr name="labelLayout" format="reference"/>
        <attr name="roundBorderWidth" format="float"/>
    </declare-styleable>
    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>


    <!-- ColorState to be used in the TinOnImageView view -->
    <declare-styleable name="TintOnStateImageView">
        <attr name="colorStateList" format="reference|color" />
    </declare-styleable>

    
    
</resources>