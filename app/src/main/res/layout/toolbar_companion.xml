<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp"
    android:paddingEnd="@dimen/home_side_margin"
    android:paddingLeft="@dimen/home_side_margin"
    android:paddingRight="@dimen/home_side_margin"
    android:paddingStart="@dimen/home_side_margin"
    android:layout_width="match_parent"
    android:background="@color/PrimaryColor"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:ellipsize="none"
            android:layout_alignParentLeft="true"
            android:id="@+id/action_bar_wiser_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/action_bar_back_arrow"
            style="@style/home_slides_title_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/header_button_back"
            style="@style/home_slides_title_text"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/action_bar_back_arrow"/>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>