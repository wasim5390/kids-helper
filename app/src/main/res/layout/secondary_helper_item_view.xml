<?xml version="1.0" encoding="utf-8"?>
<com.uiu.helper.KidsHelper.mvp.ui.home.secondary_helper.SecondaryHelperItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/secondary_helper_profile_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:placeholderImage="@drawable/profile_placement"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        android:text="wasimamin538@gmail.com"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Black"

        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/secondary_helper_profile_photo"
        app:layout_constraintStart_toEndOf="@+id/secondary_helper_profile_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/secondary_helper_profile_photo"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="wasim amin"
        android:textColor="@color/Black"
        />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:text="03004405390"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/Black"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_dark"
        app:layout_constraintTop_toBottomOf="@+id/secondary_helper_profile_photo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

        />
</com.uiu.helper.KidsHelper.mvp.ui.home.secondary_helper.SecondaryHelperItemView>