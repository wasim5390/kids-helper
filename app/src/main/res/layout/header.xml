                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/help"
                    style="@style/MiniMenuButtonsStyle"/>
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:background="@color/Gray"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv7"
                    android:background="@drawable/ic_logout_black"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/nav_view_logout"
                    android:onClick="onNavigationItemClick"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/iv7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/logout"
                    style="@style/MiniMenuButtonsStyle"/>
            </RelativeLayout>
            <View
                android:background="@color/Gray"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv8"
                    android:background="@drawable/ic_close_black_24dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/nav_view_close"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/iv8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/close"
                    style="@style/MiniMenuButtonsStyle"/>
            </RelativeLayout>
            <View
                android:background="@color/Gray"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="1dp"/>
        </LinearLayout>
</LinearLayout>