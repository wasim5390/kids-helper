                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/nav_view_about"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/iv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/about"
                    style="@style/MiniMenuButtonsStyle"/>
            </RelativeLayout>
            <View
                android:background="@color/Gray"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv5"
                    android:background="@drawable/ic_email_black"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/nav_view_contact"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/iv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/contact_uss"
                    style="@style/MiniMenuButtonsStyle"/>
            </RelativeLayout>
            <View
                android:background="@color/Gray"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:visibility="gone"
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv6"
                    android:background="@drawable/ic_help_black"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
