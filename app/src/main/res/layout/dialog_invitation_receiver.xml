<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical">

    <FrameLayout
        android:background="@color/PrimaryDarkColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivWiserIcon"
            android:src="@drawable/companion_app_title_logo_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

    </FrameLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:orientation="vertical">
    <Button
        android:textAllCaps="false"
        android:id="@+id/dialog_invitation_actions_button_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/home_slide_title_color"
        android:textColor="@android:color/white"
        android:text="@string/invitation_actions_accept"
        android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/switchRoleView"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:orientation="vertical">
        <Button
            android:textAllCaps="false"
            android:id="@+id/dialog_invitation_actions_button_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/home_slide_title_color"
            android:textColor="@android:color/white"
            android:text="@string/invitation_actions_switch"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/remove_from_list_view"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:orientation="vertical">
    <Button
        android:textAllCaps="false"
        android:id="@+id/dialog_invitation_actions_button_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/home_slide_title_color"
        android:textColor="@android:color/white"
        android:text="@string/invitation_actions_remove"
        android:textSize="20dp" />
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_invitation_actions_button_cancel"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:background="@color/PrimaryDarkColor"
            android:text="@string/header_button_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>
</LinearLayout>